---
interface Props {
  borderInline?: boolean;
  borderTop?: boolean;
  borderBottom?: boolean;
}

const { borderInline, borderTop, borderBottom } = Astro.props;
---

<div
  class:list={[
    "content",
    {
      "border-inline": borderInline,
      "border-top": borderTop,
      "border-bottom": borderBottom,
    },
  ]}
>
  <slot />
</div>
<style>
  .content {
    grid-column: content;
  }

  .border-inline {
    border-inline: 1px solid var(--color-divider);
  }

  @media (max-width: 768px) {
    .border-inline {
      border-inline: none;
    }
  }

  .border-top {
    border-block-start: 1px solid var(--color-divider);
  }

  .border-bottom {
    border-block-end: 1px solid var(--color-divider);
  }
</style>
