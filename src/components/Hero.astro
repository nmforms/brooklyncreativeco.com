---
import Button from "./Button.astro";

interface Props {
  titleText: string;
  subtitleText: string;
  buttonText: string;
}

const { titleText, subtitleText, buttonText } = Astro.props;
---

<div class="container">
  <h1 class="title h1">
    {titleText}
  </h1>
  <h2 class="subtitle">
    {subtitleText}
  </h2>
  <Button>{buttonText}</Button>
</div>
<style>
  .container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    align-items: center;
    border-inline: 1px solid var(--color-divider);
    padding-top: 120px;
    padding-bottom: 100px;
    padding-inline: 20px;
  }

  .title {
    text-align: center;
    white-space: pre-wrap;
    max-width: 31ch;
  }

  .subtitle {
    text-align: center;
    margin-top: 20px;
    margin-bottom: 64px;
    white-space: pre-wrap;
    max-width: 75ch;
  }

  @media (max-width: 768px) {
    .container {
      border-inline: none;
    }

    .subtitle {
      margin-bottom: 40px;
    }
  }
</style>
