---
const { case: c } = Astro.props;
---

<div class="case-item">
  <div class="case-image"></div>
  <h2 class="case-title h2">{c.data.name}</h2>
  <div class="case-body">{c.data.tags.join(", ")}</div>
</div>
<style>
  .case-item {
    padding: 40px;
    border-right: 1px solid var(--color-divider);
  }
  .case-image {
    background-color: gray;
    width: 100%;
    aspect-ratio: 520 / 489; /* TODO: remove */
    height: auto;
  }

  .case-title {
    margin-top: 40px;
  }

  .case-body {
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
  }

  @media (max-width: 768px) {
    .case-item {
      border-right: none;
    }
  }
</style>
