<nav>
  <div class="top-line"></div>
  <div class="container">
    <img src="/logo.svg" alt="logo" width="80px" height="60px" />
    <label for="menu" tabindex="0" class="mobile-nav-button">
      <div></div>
      <div></div>
      <div></div>
    </label>
    <input type="checkbox" id="menu" />
    <div class="nav-links">
      <a class="selected" href="#">work</a>
      <a href="#">services</a>
      <a href="#">packages</a>
      <a href="#">contact</a>
    </div>
  </div>
  <style>
    :root {
      --nav-height: 108px;
    }

    nav {
      border-bottom: 1px solid var(--color-divider);
      height: var(--nav-height);
    }
    .top-line {
      background-color: var(--color-primary);
      height: 6px;
    }
    .container {
      display: flex;
      align-items: center;
      height: 100%;
      padding-inline: 100px;
      margin-inline: auto;
      max-width: var(--content-max-width);
    }

    .nav-links {
      display: flex;
      gap: 20px;
      margin-left: auto;
    }

    mobile-nav-button,
    input {
      display: none;
    }

    a {
      color: var(--color-text);
      font-size: 0.875rem;
      line-height: 1rem;
      text-transform: uppercase;
      position: relative;
    }
    a:hover:after,
    a.selected:after {
      content: "";
      position: absolute;
      left: 0;
      right: 0;
      bottom: -10px;
      height: 2px;
      background-color: var(--color-primary);
      animation: grow 0.3s ease;
    }

    .nav-links:hover > a.selected:not(:hover):after {
      animation: shrink 0.3s ease forwards;
    }

    @keyframes grow {
      from {
        width: 0;
      }
      to {
        width: 100%;
      }
    }

    @keyframes shrink {
      from {
        width: 100%;
      }
      to {
        width: 0;
      }
    }

    @media screen and (max-width: 768px) {
      .container {
        padding-inline: var(--page-margin);
        position: relative;
      }
      input[type="checkbox"]:not(:checked) + .nav-links {
        height: 0;
        overflow: hidden;
        padding-top: 0;
      }

      body:has(#menu:checked) {
        overflow: hidden;
      }

      .nav-links {
        flex-direction: column;
        position: fixed;
        top: var(--nav-height);
        right: 0;
        height: calc(100vh - var(--nav-height));
        left: 0;
        background-color: var(--color-background);
        z-index: 2;
        align-items: center;
        gap: 80px;
        padding-top: 80px;
        transition: all 0.2s ease;
        a {
          font-size: 1.5rem;
        }
      }
      .mobile-nav-button {
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 4px;
        width: 24px;
        height: 24px;
        margin-left: auto;

        div {
          display: block;
          width: 100%;
          height: 2px;
          background-color: var(--color-text);
        }
      }
    }
  </style>
</nav>
