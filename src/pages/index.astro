---
import CaseStudyGrid from "../components/CaseStudyGrid.astro";
import Hero from "../components/Hero.astro";
import GridContent from "../components/LayoutGrid/GridContent.astro";
import GridFullBleed from "../components/LayoutGrid/GridFullBleed.astro";
import LayoutGrid from "../components/LayoutGrid/LayoutGrid.astro";
import LogoStrip from "../components/LogoStrip.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <LayoutGrid>
    <GridContent borderInline>
      <Hero
        titleText="independent Creative company specializing in the fields of design, brand and digital experiences."
        subtitleText="Brooklyn Creative is the independent studio practice of Nicole Formica -\
        specializing in the fields of design, brand and digital experience."
        buttonText="Let's work together"
      />
    </GridContent>
    <GridFullBleed borderTop borderBottom>
      <LogoStrip />
    </GridFullBleed>
    <GridContent>
      <CaseStudyGrid />
    </GridContent>
    <GridContent borderInline borderTop borderBottom>
      <div class="spacer"></div>
    </GridContent>
  </LayoutGrid>
</Layout>

<style>
  .spacer {
    height: 80px;
  }

  @media (max-width: 768px) {
    .container {
      grid-template-columns: 0 minmax(0, 1fr) 0;
    }

    .spacer {
      border-inline: 0;
    }
  }
</style>
